/**
 * Implements hook_node_view().
 */
function amazon_send_to_kindle_node_view($node, $view_mode = 'full', $langcode = NULL) {
  $content_types = variable_get('amazon_send_to_kindle_nodes', array());
  $node_types = variable_get('amazon_send_to_kindle_node_type', 'full');

  // Include the javascript file provided by the Amazon.
  drupal_add_js(drupal_get_path('module', 'amazon_send_to_kindle') . '/amazon_send_to_kindle.js', 'file');
  drupal_add_css(drupal_get_path('module', 'amazon_send_to_kindle') . '/kindle.css');

  if ($content_types[$node->type] != NULL && ($node_types == $view_mode || $node_types == 'both')) {
    $url = url(drupal_lookup_path('alias', 'node/' . $node->nid), array('absolute' => TRUE));
    if (!$url) {
      $url = url('node/' . $node->nid, array('absolute' => TRUE));
    }
    // Append the HTML given by the Amazon here.
    // We are fetching from the text area variable which we stored during module
    // configuration.
    // Assign the HTML with the node render content.
    if (variable_get('amazon_send_to_kindle_button_type', 0) == 0) {
      $output = variable_get('amazon_send_to_kindle_html', NULL);
    }
    else {
      $output = _amazon_send_to_kindle_get_html();
    }
    $node->content['amazon-send-to-kindle'] = array(
      '#markup' => $output,
      '#weight' => 20,
    );
  }
}

/**
 * This function will generate the html code for the kindle button.
 */
function _amazon_send_to_kindle_get_html() {
  global $base_url;
  $html = "<div class='kindleWidget";
  if (variable_get('amazon_send_to_kindle_button_border', 0)) {
    $html .= (variable_get('amazon_send_to_kindle_button_border', 0) == 0 ? ' kindleLight' : ' kindleDark');
  }
  $html .= (variable_get('amazon_send_to_kindle_icon_theme', 0) == 1 ? ' kindleDarkText' : '') . "' ";
  if ('sans-serif' !== variable_get('amazon_send_to_kindle_button_font', 'sans-serif')) {
    $html .= "style='font-family: " . variable_get('amazon_send_to_kindle_button_font', 'sans-serif') . ";'";
  }
  $html .= ">";
  // Button icon.
  $html .= '<img src="' . $base_url . '/' . drupal_get_path('module', 'amazon_send_to_kindle') . '/images/';
  $html .= variable_get('amazon_send_to_kindle_icon_color', 0) == 0 ? 'black' : 'white';
  $html .= variable_get('amazon_send_to_kindle_icon_size', 0) == 0 ? '-25' : '-15';
  $html .= '.png" />';

  // Text label style.
  if (variable_get('amazon_send_to_kindle_button_text', 0) == 0) {
    $html .= '<span>' . t('Kindle') . '</span>';
  }
  elseif (variable_get('amazon_send_to_kindle_button_text', 0) == 1) {
    $html .= '<span>' . t('Send to Kindle') . '</span>';
  }
  $html .= '</div>';
  return $html;
}
